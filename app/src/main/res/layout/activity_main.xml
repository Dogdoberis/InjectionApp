<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ADD8E6"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liejimo Staklių Parametrai"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/paieskaButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PAIEŠKA"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/technologinisButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TECHNOLOGINIS"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/formaButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FORMA"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/staklesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STAKLĖS"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/polimeraiButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POLIMERAI"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/klaidosButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KLAIDOS"
        android:background="#FFFF00" />
</LinearLayout>
